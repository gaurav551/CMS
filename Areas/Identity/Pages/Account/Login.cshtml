@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@{
 Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="/cooladmin/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            <form id="account" method="post">
                                 <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input class="au-input au-input--full" type="email" asp-for="Input.Email" placeholder="Email">
                                      <span asp-validation-for="Input.Email" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="au-input au-input--full" type="password" asp-for="Input.Password" placeholder="Password">
                                </div>
                                <div class="login-checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input type="checkbox" asp-for="Input.RememberMe">Remember Me
                                    </label>
                                    
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Sign in</button>
                               
                            </form>
                            <div class="register-link">
                                <p>
                                   
                                    <a asp-action="Index" asp-controller="Post">  Don't have account?</a> 
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>