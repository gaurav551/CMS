@model List<Post>
@if(Model.Count==0)
{
    <h1> No Posts</h1>
}
else if (Model.Count==1)
{
<h1> @ViewBag.count Post</h1>
}
else{
<h1>@ViewBag.Count Posts</h1> }
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col"> Id </th>
      <th scope="col">Title</th>
      <th scope="col">Created</th>
      <th colspan ="3">Manage</th>
    </tr>
  </thead>
  <tbody>
    
        @foreach (var x in Model)
        {
            
        <tr> 
      <td scope="row">@x.Id</td>
      <td>@x.Title</td>
      <td>@x.CreatedAt</td>
      <td><a asp-action="Edit" asp-controller="Admin" asp-route-id="@x.Id">Edit</a></td>
      <td><a asp-action="Delete" asp-controller="Admin" asp-route-id="@x.Id">Delete</a></td>
      <td><a target="_blank" asp-action="View" asp-controller="Admin" asp-route-id="@x.Id">View</a></td>
      </tr>
        }
    
   
  </tbody>
</table>
